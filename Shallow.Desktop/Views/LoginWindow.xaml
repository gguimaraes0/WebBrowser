<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="Assets\shallowLogo.png" Height="200" Margin="0,-28,0,38" Grid.RowSpan="2"/>
        <TextBox
            x:Name="txtUser"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="30"
            Width="200"
            Grid.Row="1"
            materialDesign:HintAssist.Hint="Digite o usuário"/>
        <PasswordBox
                Grid.Row="2"
                Height="30"
                Width="200"
                x:Name="txtPassword"
                materialDesign:TextFieldAssist.HasClearButton="True"
                materialDesign:HintAssist.Hint="Digite sua senha"/>
        <Button
            x:Name="bttLogin"
            Width="70"
            Click="bttLogin_Click"
            Height="30"
            Grid.Row="3"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            materialDesign:ButtonAssist.CornerRadius="5"
            ToolTip="Button with Round Corners"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
            <TextBlock
               Text="Entrar" />
        </Button>

    </Grid>
</Window>
